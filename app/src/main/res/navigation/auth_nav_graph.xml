<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.androidauthnavigationdemo.ProfileFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_register_step1"
            app:destination="@id/registerStep1Fragment" />
        <action
            android:id="@+id/action_login_to_profile"
            app:destination="@id/profile_nav_graph"
            app:popUpTo="@id/auth_nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerStep1Fragment"
        android:name="com.example.androidauthnavigationdemo.ProfileFragment"
        android:label="Register Step 1"
        tools:layout="@layout/fragment_register_step1">
        <action
            android:id="@+id/action_register_step1_to_register_step2"
            app:destination="@id/registerStep2Fragment" />
        <argument
            android:name="email"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="password"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/registerStep2Fragment"
        android:name="com.example.androidauthnavigationdemo.ProfileFragment"
        android:label="Register Step 2"
        tools:layout="@layout/fragment_register_step2">
        <action
            android:id="@+id/action_register_step2_to_profile"
            app:destination="@id/profile_nav_graph"
            app:popUpTo="@id/auth_nav_graph"
            app:popUpToInclusive="true" />
        <argument
            android:name="email"
            app:argType="string" />
    </fragment>

    <navigation
        android:id="@+id/profile_nav_graph"
        app:startDestination="@id/profileFragment">
        <fragment
            android:id="@+id/profileFragment"
            android:name="com.example.androidauthnavigationdemo.ProfileFragment"
            android:label="Profile"
            tools:layout="@layout/fragment_profile">
            <argument
                android:name="email"
                app:argType="string" />
            <action
                android:id="@+id/action_profile_to_auth"
                app:destination="@id/auth_nav_graph"
                app:popUpTo="@id/profile_nav_graph"
                app:popUpToInclusive="true" />
        </fragment>
    </navigation>
</navigation>